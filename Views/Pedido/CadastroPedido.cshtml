@{
    Layout = "_Layout";
    @model DistribuidoraProdutos.Models.Pedido
}

<div class="container">
    <form action="IncluirPedido" method="post">
        <button type="submit" class="btn btn-primary">
            Salvar
        </button>

        <div class="col-10">
            <div class="row">
                <div class="col">
                    <label asp-for="Data" class="form-label">Data</label>
                    <input
                        type="text"
                        class="form-control"
                        asp-for="Data"
                    />
                </div>

                <div class="col">
                    <label asp-for="Situacao" class="form-label">Situação</label>
                    <input
                        type="text"
                        class="form-control"
                        asp-for="Situacao"
                    />
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <label asp-for="ClienteMatricula" class="form-label">Matrícula do Cliente</label>
                    <input
                        type="number"
                        class="form-control"
                        asp-for="ClienteMatricula"
                    />
                </div>
            </div>
        </div>
    </form>
</div>
