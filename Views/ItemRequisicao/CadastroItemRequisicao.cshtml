@{
    Layout = "_Layout";
    @model DistribuidoraProdutos.Models.ItemRequisicao
}

<div class="container">
    <form action="IncluirItemRequisicao" method="post">
        <button type="submit" class="btn btn-primary">
            Salvar
        </button>

        <div class="col-10">
            <div class="row">
                <div class="col">
                    <label asp-for="Quantidade" class="form-label">Quantidade</label>
                    <input
                        type="number"
                        class="form-control"
                        asp-for="Quantidade"
                    />
                </div>

                <div class="col">
                    <label asp-for="ValorUltimoFornecimento" class="form-label">Valor do Último Fornecimento</label>
                    <input
                        type="number"
                        step="0.01"
                        class="form-control"
                        asp-for="ValorUltimoFornecimento"
                    />
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <label asp-for="RequisicaoNumero" class="form-label">Número da Requisição</label>
                    <input
                        type="number"
                        class="form-control"
                        asp-for="RequisicaoNumero"
                    />
                </div>

                <div class="col">
                    <label asp-for="ProdutoCodigo" class="form-label">Código do Produto</label>
                    <input
                        type="number"
                        class="form-control"
                        asp-for="ProdutoCodigo"
                    />
                </div>
            </div>
        </div>
    </form>
</div>
